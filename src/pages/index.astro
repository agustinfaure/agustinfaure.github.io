---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
import Sidebar from "../components/Sidebar.astro";
import Section from "../components/Section.astro";
import ProjectCard from "../components/ProjectCard.astro";
import { projects } from "../data/projects";

const me = {
  name: "Agustín Faure",
  email: "agustin.faure@zew.de",
  location: "ZEW Mannheim, Germany",
  photoUrl: "/avatar.jpg", // place a file at public/avatar.jpg
  links: [
  { label: "Market Design", href: "https://www.zew.de/en/team/afa"},
    { label: "GitHub", href: "https://github.com/agustinfaure" },
  ],
};
---
<BaseLayout title="Agustín Faure – Research">
  <!-- 2-col layout: main content + right sticky sidebar -->
  <div class="grid gap-8 lg:grid-cols-[minmax(0,1fr)_320px]">
    <!-- center/main column -->
    <div class="space-y-12">
      <Section id="bio" title="Bio">
        <p>
        I am a Postdoctoral Researcher at the ZEW Mannheim in the Market Design unit.
        Prior to joining the ZEW, I have done my doctoral research at Ludwig-Maximilians-Universität (LMU) Munich.
        I am a Joachim Herz Fellow and previously visited the Haas School of Business and the Institute for Research on Labor and Employment (IRLE) at UC Berkeley.
        </p>
        <p>
        My work combines structural microeconometrics and organizational/personnel economics to study how incentives and information shape organizational performance, careers and public policy outcomes.
        </p>
      </Section>

      <Section id="interests" title="Research interests">
        <ul>
          <li>Labor (Personnel and Organizational) Economics and Migration</li>
          <li>Political Economics (Public Administration)</li>
          <li>Structural microeconometrics, dynamic choice models</li>
        </ul>
      </Section>

      <Section id="projects" title="Selected projects">
        <div class="space-y-4">
          {projects.map(p => <ProjectCard {...p} />)}
        </div>
      </Section>
    </div>

    <!-- right sidebar -->
    <Sidebar {...me} />
  </div>
</BaseLayout>
